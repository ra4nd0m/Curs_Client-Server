@page
@model CursProper.Pages.Databases.AddLitRefModel
@{
}
<p>
    <a asp-page="/LitReferences/Create">Создать</a>
</p>
<div>
    <a asp-page="./Details"asp-route-id="@Model.Db_id">Назад</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Авторы
            </th>
            <th>
                Название
            </th>
            <th>
                Источник
            </th>
            <th>
                Год
            </th>
            <th>
                Том
            </th>
            <th>
                Номер
            </th>
            <th>
                Страницы
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Databases)
        {
            <tr>
                <td>
                    @foreach(var author in item.Authors)
                    {
                        @author.AuthorName
                    }
                </td>
                <td>@item.Article</td>
                <td>
                    @item.Source
                </td>
                <td>@item.Year</td>
                <td>
                    @item.Volume
                </td>
                <td>@item.Number</td>
                <td>@item.Pages</td>
                <td>
                <form method = "post">
                    <input type="submit" asp-page-handler="SelectItem" asp-route-id="@item.ReferenceId" asp-route-db_id="@Model.Db_id"/>
                </form>
                </td>
            </tr>
        }
     </tbody>
    </table>
    <div>
        <ul class ="pagination">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="./AddLitRef" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
    </div>